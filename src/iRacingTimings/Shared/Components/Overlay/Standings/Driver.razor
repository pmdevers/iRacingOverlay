@namespace iRacingTimings.Shared.Components.Overlay
@using System.Web
@inherits DriverBase

<div class="@ClassMapper.AsString()" style="@StyleMapper.AsString()">
    <div class="driver">
        <div class="driver-background"></div>
        <Position>@Driver.Position</Position>
        <ColorStripe Color="@(@Driver.TrackSurf == TrackLocation.OffTrack ? "red" : Driver.ClassColor)"></ColorStripe>

        <div class="container">
            <div class="name-wrapper">
                <div class="name">@HttpUtility.HtmlDecode(Driver.Name)</div>
            </div>
            
            <div class="@DataClassMapper.AsString()">
                <div class="data2">@Driver.LastLap.Seconds().ToLapTimeString()</div>
                <div class="data"></div>
                <div class="car-logo"></div>
                <div class="flag"></div>
            </div>
            
            <div class="last-lap-time-wrapper">
                <div class="last-lap-time">@Driver.LastLap.Seconds().ToLapTimeString()</div>
            </div>
            <Flag Id="flagWrapper7x5" Scale="FlagScale.flag7x5"></Flag>
            <div class="pit-wrapper">
                <div class="pit">IN PIT</div>
            </div>
        </div>
    </div>
</div>